<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87CEEB"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dayText"
        android:layout_width="97dp"
        android:layout_height="35dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30.0sp"
        android:text="day 1"
        android:textColor="#000000"
        android:textSize="25.0sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/questionText"
        android:layout_width="match_parent"
        android:layout_height="40.0sp"
        android:layout_gravity="center"
        android:layout_marginTop="30.0sp"
        android:background="#FDF5E6"
        android:gravity="center"
        android:text="질문"
        android:textColor="#000000"
        android:textSize="25.0sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/titleET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="제목을 입력해주세요" />

    <EditText
        android:id="@+id/bodyET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0sp"
        android:layout_weight="0.50"
        android:background="#FDF5E6"
        android:ems="10"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/diarylistbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#FDF5E6"
            android:text="목록"
            android:onClick="diarylistbuttonClicked"
            android:textColor="#000000"
            android:textSize="25.0sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/diarySaveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#FDF5E6"
            android:onClick="saveDiary"
            android:text="저장"
            android:textColor="#000000"
            android:textSize="25.0sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/closeDiarybtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#FDF5E6"
            android:onClick="closeDiary"
            android:text="나가기"
            android:textColor="#000000"
            android:textSize="25.0sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>